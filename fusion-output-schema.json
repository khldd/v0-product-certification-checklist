{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Checklist Fusion Output",
  "description": "Structured output format for AI agent checklist fusion analysis",
  "type": "object",
  "required": ["fusable", "confidence", "reason"],
  "properties": {
    "fusable": {
      "type": "boolean",
      "description": "Whether the two checklist items can be merged"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Confidence score (0-100) in the fusion decision"
    },
    "reason": {
      "type": "string",
      "description": "Brief explanation of why items are or aren't fusable",
      "minLength": 10,
      "maxLength": 500
    },
    "fused_item": {
      "type": ["object", "null"],
      "description": "The merged checklist item (null if not fusable)",
      "required": ["id", "section", "question", "sources"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^fusion\\.",
          "description": "Unique identifier starting with 'fusion.'"
        },
        "section": {
          "type": "string",
          "description": "Unified section name combining both sources"
        },
        "sous_section": {
          "type": "string",
          "description": "Unified subsection (empty string if not applicable)"
        },
        "question": {
          "type": "string",
          "description": "Clear, concise merged question preserving all key requirements",
          "minLength": 10
        },
        "status": {
          "type": ["string", "null"],
          "enum": ["RN", "RNE", null],
          "description": "Status indicator - keep most restrictive from source items"
        },
        "options": {
          "type": "array",
          "description": "Unified list of options combining equivalent choices",
          "items": {
            "type": "object",
            "required": ["label", "source"],
            "properties": {
              "label": {
                "type": "string",
                "description": "Unified option text"
              },
              "source": {
                "type": "string",
                "enum": ["doc1", "doc2", "both"],
                "description": "Which document(s) this option came from"
              },
              "original_doc1": {
                "type": ["string", "null"],
                "description": "Original wording from document 1 (if applicable)"
              },
              "original_doc2": {
                "type": ["string", "null"],
                "description": "Original wording from document 2 (if applicable)"
              },
              "checked": {
                "type": ["boolean", "null"],
                "description": "Whether this option is checked"
              }
            }
          }
        },
        "notes": {
          "type": ["string", "null"],
          "description": "Combined notes from both items, clearly labeled by source"
        },
        "page": {
          "type": "string",
          "description": "Page references in format 'doc1: X, doc2: Y'"
        },
        "sources": {
          "type": "object",
          "required": ["doc1", "doc2"],
          "description": "Original source information from both documents",
          "properties": {
            "doc1": {
              "type": "object",
              "required": ["id", "section", "question"],
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Original item ID from document 1"
                },
                "section": {
                  "type": "string",
                  "description": "Original section from document 1"
                },
                "sous_section": {
                  "type": "string",
                  "description": "Original subsection from document 1"
                },
                "question": {
                  "type": "string",
                  "description": "Original question from document 1"
                }
              }
            },
            "doc2": {
              "type": "object",
              "required": ["id", "section", "question"],
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Original item ID from document 2"
                },
                "section": {
                  "type": "string",
                  "description": "Original section from document 2"
                },
                "sous_section": {
                  "type": "string",
                  "description": "Original subsection from document 2"
                },
                "question": {
                  "type": "string",
                  "description": "Original question from document 2"
                }
              }
            }
          }
        }
      }
    }
  }
}
